<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<p> <%= @cocktail.name %> </p>
<br>

<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item">
      <%= dose.ingredient.name %> - <%= dose.description %>
      <%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }%>

    </li>
  <% end %>
</ul>


<%= link_to 'Add a dose',  new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Back to cocktails list', cocktails_path %>
